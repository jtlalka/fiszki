<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/test_template"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_show_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/sep_size_m"
                android:background="@drawable/patch_yellow"
                android:gravity="center"
                android:text="@string/test_activity_show_word"
                android:textSize="@dimen/font_size_l"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/sep_size_m"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_answer_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/sep_size_s"
                android:layout_weight="1"
                android:background="@drawable/patch_blue"
                android:gravity="center"
                android:text="@string/test_activity_answer"
                android:textSize="@dimen/font_size_l"/>

            <Button
                android:id="@+id/test_answer_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/sep_size_s"
                android:layout_weight="1"
                android:background="@drawable/patch_blue"
                android:gravity="center"
                android:text="@string/test_activity_answer"
                android:textSize="@dimen/font_size_l"/>

            <Button
                android:id="@+id/test_answer_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/sep_size_s"
                android:layout_weight="1"
                android:background="@drawable/patch_blue"
                android:gravity="center"
                android:text="@string/test_activity_answer"
                android:textSize="@dimen/font_size_l"/>

            <Button
                android:id="@+id/test_answer_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/patch_blue"
                android:gravity="center"
                android:text="@string/test_activity_answer"
                android:textSize="@dimen/font_size_l"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>