<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/topic_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_topic"
        android:layout_width="@dimen/topic_icon_size"
        android:layout_height="@dimen/topic_icon_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/topic_icon_margin"
        android:contentDescription="@string/nav_lessons"
        android:src="@drawable/lessons_icon"/>

    <TextView
        android:id="@+id/lesson_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_view_topic"
        android:layout_toStartOf="@+id/lesson_progress"
        android:gravity="center_vertical"
        android:text="@string/nav_lessons"
        android:textSize="@dimen/font_size_l"/>

    <TextView
        android:id="@+id/lesson_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/topic_icon_margin"
        android:gravity="center_vertical"
        android:text="@string/lesson_activity_progress"
        android:textSize="@dimen/font_size_l"/>

</RelativeLayout>